-- extra-source-files:
cabal-version:       >=1.10

executable vulkan-example
  hs-source-dirs:      src
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , vulkan >= 1.7
